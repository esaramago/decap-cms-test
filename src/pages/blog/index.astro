---
import Layout from '@/components/Layout.astro'

const matches = import.meta.glob('./posts/*.md', { eager: true })
const posts = Object.values(matches)

---

<Layout title="Blog">
  <h1>Blog</h1>

  <ul>
    {posts.map((post) => (
      <li>
        <a href={post.url}>{post.frontmatter.title}</a>
      </li>
    ))}
  </ul>
</Layout>